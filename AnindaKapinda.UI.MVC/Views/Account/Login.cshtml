    <div class="login">
        <h1>Oturum Aç</h1>
        <span class="alert-warning">@(ViewBag.Hata == null ? "" : ViewBag.Hata)</span>
        <form method="post" action="/Account/Login">
            <input type="text" name="Mail" placeholder="Kullanıcı Adı Giriniz (Mail)" required="required" />
            <input type="password" name="Password" placeholder="Şifre Giriniz" required="required" />
            <button type="submit" class="btn btn-primary btn-block btn-large">Giriş Yap</button>
            <div class="row m-t-15 m-b--20">
                <div class="col-xs-6">
                    <br />
                    <a href="/Account/Register">Kayıt Ol</a>
                </div>
            </div>
        </form>
    </div>

